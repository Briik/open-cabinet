production:
  secret_key_base: <%= @secret_key_base %>
  BASIC_AUTH_USERNAME: <%= @auth_user %>
  BASIC_AUTH_PASSWORD: <%= @auth_pass %>
  USPS_USER: <%= @usps_api_key %>
  portal_endpoint: <%= @portal_endpoint %>
  ELIS_PASSWORD: <%= @elis_password %>
  sales_force_endpoint: <%= @sales_force_endpoint %>
  sales_force_client_id: <%= @sales_force_client_id %>
  sales_force_client_secret: <%= @sales_force_client_secret %>
  sales_force_user_name: <%= @sales_force_user_name %>
  sales_force_password: <%= @sales_force_password %>
  local_endpoint: <%= @callback_url %>
  saml_idp_host: <%= @saml_endpoint_url %>
  saml_idp_cert: |
            <%= File.open('/etc/saml/saml_idp.pem').readlines.join('            ') if File.exist?('/etc/saml/saml_idp.pem') %>
  saml_cert: |
            <%= File.open('/etc/saml/saml_cert.pem').readlines.join('            ') if File.exist?('/etc/saml/saml_cert.pem') %>
  saml_private_key: |
            <%= File.open('/etc/saml/saml_private_key.pem').readlines.join('            ') if File.exist?('/etc/saml/saml_private_key.pem') %>